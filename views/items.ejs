  <h1>All Items</h1>
  <div class="options">
    <div class="sort">
      <form action="/items/sort" method="post">
        <select onchange="this.form.submit()" name="sort">
          <option value="">---SORT---</option>
          <option value="high">Price high to low</option>
          <option value="low">Price low to high</option>
          <option value="alpha">Alphabetically</option>
        </select>
      </form>
    </div>

    <div class="filter">
      <form action="/items/filter" method="post">
        <select onchange="this.form.submit()" name="filter">
          <option value="">---FILTER---</option>
          <% categories.forEach(element => { %>
          <option value="<%= element.category_id %>">
            <%= element.category_name %>
          </option>
          <% }) %>
        </select>
      </form>
    </div>

    <div class="search">
      <form action="/items/search" method="get">
        <input type="search" name="q" id="search" />
        <button class="delete">üîç</button>
      </form>
    </div>
  </div>

  <a href="/items/new">Create New Item</a>
  <div class="item-container">
    <% items.forEach(element => { %>

    <section class="item">
      <img src="<%= element.image_url %>" alt="item image" />
      <div class="content">
        <h2><%= element.title %></h2>
        <p>$ <%= element.price %></p>
        <a href="/items/<%= element.item_id %>">See Item</a>
      </div>
    </section>

    <% }) %>
  </div>
</main>
