<style>
  #adminss {
    text-decoration: underline;
  }
</style>

<main class="top-spacing">
  <div class="form">
    <table>
      <tr>
        <th style="width: 300px">Username</th>
        <th style="width: 300px">Email</th>
        <th>User</th>
        <th>Admin</th>
      </tr>
      <% users.forEach(element => { %>
      <tr>
        <input type="hidden" name="id" value="<%= element.id %>" />
        <td><%= element.username %></td>
        <td><%= element.email %></td>
        <td class="table-checkbox">
          <% if (element.isuser) { %><input
            type="checkbox"
            name="isUser"
            value="true"
            checked
            disabled
          />
          <% } else { %>
          <input type="checkbox" name="isUser" value="false" disabled /> <% } %>
        </td>
        <td class="table-checkbox">
          <% if (element.isadmin) { %><input
            type="checkbox"
            name="isAdmin"
            value="true"
            checked
            disabled
          />
          <% } else { %>
          <input type="checkbox" name="isAdmin" value="false" disabled /> <% }
          %>
        </td>
        <td>
          <form action="/user/<%= element.id %>" method="post">
            <input type="hidden" name="_method" value="delete" />
            <button class="delete">❌</button>
          </form>
        </td>
      </tr>
      <%}) %>
    </table>
    <a href="/admin/dashboard/edit">Edit</a>
  </div>
</main>
